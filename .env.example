# TwinStar Quantum - Environment Variables Example
# Copy this file to .env and fill in your actual API keys.
# DO NOT commit your .env file to version control!

# --- Bybit Config ---
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# --- Binance Config ---
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# --- OKX Config ---
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# --- Lighter (ZkLighter) Config ---
LIGHTER_API_KEY_INDEX=0
LIGHTER_API_PRIVATE_KEY=your_private_key_hex_here
LIGHTER_ACCOUNT_INDEX=0
LIGHTER_BASE_URL=https://mainnet.zklighter.elliot.ai

# --- App Settings ---
VERSION=1.7.0
ENV=production
DEBUG=False

# --- Web Backend Settings (Phase 3-1) ---
# CORS allowed origins (comma-separated, or "*" for development)
# Production: http://localhost:8000,https://yourdomain.com
# Development: *
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
